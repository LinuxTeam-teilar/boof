<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_margin="5dip"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent">
	<ImageView
		android:layout_height="wrap_content"
		android:src="@drawable/start_button_images"
		android:layout_width="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="5dp"
		android:id="@+id/startImg"
		android:clickable="true"></ImageView>
	<TextView
		android:layout_height="100dp"
		android:inputType="numberSigned"
		android:layout_width="100dp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:id="@+id/numberOfPlayersTv"
		android:textStyle="bold"
		android:gravity="center"
		android:textSize="72sp"
		android:text="5"
		android:maxLength="1"
		android:textColor="#FFFFFFFF">
	</TextView>
	<ImageView
		android:layout_width="wrap_content"
		android:id="@+id/logoImg"
		android:src="@drawable/boof"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_height="wrap_content"></ImageView>
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity="center"
		android:textSize="22sp"
		android:text="@string/instructionsText"
		android:layout_marginRight="5dp"
		android:layout_marginTop="25dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:id="@+id/instructionsTextView"></TextView>
	<ImageView
		android:layout_width="wrap_content"
		android:src="@drawable/plus_released"
		android:id="@+id/imageView1"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/numberOfPlayersTv"
		android:layout_marginLeft="10dp"
		android:onClick="plusButtonClicked"></ImageView>
	<ImageView
		android:layout_width="wrap_content"
		android:src="@drawable/minus_released"
		android:id="@+id/imageView2"
		android:layout_marginRight="10dp"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/numberOfPlayersTv"
		android:onClick="minusButtonClicked"></ImageView>
</RelativeLayout>
